@using JofMVC1.Models
@model List<Fruit>

    <div class="container">
        <h3>Fruits</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Fruit">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <div style="width:250px">
                        <img src="~/Upload/Fruits/@item.ImgUrl" />
                    </div>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Update" asp-controller="Fruit" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Fruit" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>


@using JofMVC1.Areas.Admin.ViewModels
@model UpdateVM

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" id="exampleFormControlInput1" placeholder="Enter the name">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Example textarea</label>
            <textarea class="form-control" asp-for="Description" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="ImageFile" class="form-control" id="inputGroupFile02">
            <span asp-validation-for="ImageFile" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>